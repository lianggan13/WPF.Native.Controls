<Window
    x:Class="FrameTranlation.LayFrameWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Frame界面导航过度"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Frame界面导航过度.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <local:LayFrame Source="{Binding ContentPage}" />
        <UniformGrid Grid.Row="1">
            <Button
                Command="{Binding GoCommand}"
                CommandParameter="/View/Page1.xaml"
                Content="Page1" />
            <Button
                Command="{Binding GoCommand}"
                CommandParameter="/View/Page2.xaml"
                Content="Page2" />
        </UniformGrid>
    </Grid>
</Window>
