<Window
    x:Class="WPF.Graphics.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Graphics"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="Transparent"
    mc:Ignorable="d">
    <TabControl Background="Transparent" SelectedIndex="0">

        <TabItem Header="VisualBrushes">
            <Frame Source="./Brushes/VisualBrushes.xaml" />
        </TabItem>

        <TabItem Header="DrawingBrushes">
            <Frame Source="./Brushes/DrawingBrushes.xaml" />
        </TabItem>

        <TabItem Header="LinearGradientBrushes">
            <Frame Source="./Brushes/LinearGradientBrushes.xaml" />
        </TabItem>

        <TabItem Header="VisualLayer">
            <Frame Source="./VisualRender/VisualLayer.xaml" />
        </TabItem>
    </TabControl>
</Window>
