<Window
    x:Class="WPF.Mouse.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Mouse"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WPF.Mouse.Views"
    Title="MainWindow"
    Width="1024"
    Height="768"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="LinkLine">
            <views:LinkLine />
        </TabItem>
        <TabItem Header="MousePosition">
            <views:MousePosition />
        </TabItem>
        <TabItem Header="MouseFollow">
            <views:MouseFollow />
        </TabItem>
        <TabItem Header="CirclesHitTest">
            <views:CirclesHitTest />
        </TabItem>
        <TabItem Header="PointHitTest">
            <views:PointHitTest />
        </TabItem>
        <TabItem Header="DragInCanvas">
            <views:DragInCanvas />
        </TabItem>
        <TabItem Header="DrawCircles">
            <views:DrawCircles />
        </TabItem>
        <TabItem Header="DragAndDrop">
            <views:DragAndDrop />
        </TabItem>
        <TabItem Header="VisualLayer">
            <views:VisualLayer />
        </TabItem>
    </TabControl>
</Window>
