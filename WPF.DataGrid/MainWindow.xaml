<Window
    x:Class="WPF.DataGrid.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.DataGrid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:WPF.DataGrid.View"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="DataGridSorting">
            <view:DataGridSorting />
        </TabItem>
        <TabItem Header="DataGridEditing">
            <view:DataGridEditing />
        </TabItem>
        <TabItem Header="DataGridGrouping">
            <view:DataGridGrouping />
        </TabItem>
        <TabItem Header="DataGridRowDetails">
            <view:DataGridRowDetails />
        </TabItem>
    </TabControl>
</Window>
