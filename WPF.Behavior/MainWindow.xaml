<Window
    x:Class="WPF.Behavior.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Behavior"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:WPF.Behavior.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="MovePanelItem">
            <view:MovePanelItem />
        </TabItem>
        <TabItem Header="FadeInAndOut">
            <view:FadeInAndOut />
        </TabItem>
        <TabItem Header="PlayMedia">
            <view:PlayMedia />
        </TabItem>
    </TabControl>
</Window>
