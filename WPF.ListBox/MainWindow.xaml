<Window
    x:Class="WPF.ListBox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.ListBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WPF.ListBox.View"
    Title="MainWindow"
    Width="1208"
    Height="586"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="ItemHighlightView">
                <views:ItemHighlightView />
            </TabItem>
            <TabItem Header="VariedStyles">
                <views:VariedStyles />
            </TabItem>
            <TabItem Header="VariedTemplates">
                <views:VariedTemplates />
            </TabItem>
            <TabItem Header="WrappedList">
                <views:WrappedList />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
