<UserControl
    x:Class="WPF.Thumb.ThumbFlow.ThumbFlow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fn="clr-namespace:WPF.Thumb.ThumbFlow"
    xmlns:local="clr-namespace:WPF.Thumb.ThumbFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="win"
    mc:Ignorable="d">
    <UserControl.Resources>

        <Style TargetType="TreeViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid Name="root" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Border
                                Name="border"
                                Grid.ColumnSpan="2"
                                Background="Transparent" />
                            <ToggleButton
                                Name="tb"
                                Width="25"
                                IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid Name="grid" Background="Transparent">
                                            <Path
                                                Name="path"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Data="M0 5 10 5M5 0 5 10"
                                                Stroke="Gray" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="grid" Property="Background" Value="#1000" />
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="path" Property="Data" Value="M0 5 10 5" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <!--  里面存放数据模板所定义的东西  -->
                            <ContentPresenter Grid.Column="1" ContentSource="Header" />
                            <!--  当前节点的子项列表  -->
                            <ItemsPresenter
                                x:Name="ItemsHost"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="18,0,0,0" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="false">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <DataTrigger Binding="{Binding Children.Count}" Value="0">
                                <Setter TargetName="tb" Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="border" Property="Background" Value="orange" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ThumbBaseStyle" TargetType="Thumb">
            <Setter Property="Background" Value="Gray" />
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="White" CornerRadius="5">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Border
                                    Width="28"
                                    Height="28"
                                    Margin="3,0"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <Path
                                        Margin="8"
                                        Data="{StaticResource pathData}"
                                        Fill="White"
                                        Stretch="Fill" />
                                </Border>
                                <TextBlock
                                    Margin="3,0"
                                    VerticalAlignment="Center"
                                    Text="ProcessA Node" />
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style BasedOn="{StaticResource ThumbBaseStyle}" TargetType="fn:FlowNodeA">
            <Setter Property="Background" Value="Orange" />
        </Style>

        <Style BasedOn="{StaticResource ThumbBaseStyle}" TargetType="fn:FlowNodeB">
            <Setter Property="Background" Value="Red" />
        </Style>

        <Style BasedOn="{StaticResource ThumbBaseStyle}" TargetType="fn:FlowNodeC">
            <Setter Property="Background" Value="Green" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="工具箱" />
        <TextBlock
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="流程" />
        <CheckBox
            Grid.Column="1"
            VerticalAlignment="Center"
            Content="连线"
            IsChecked="{Binding IsSwitchLink}" />
        <Button
            Grid.Column="1"
            Margin="60,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="Button_Click"
            Content="运行" />

        <TreeView
            Grid.Row="1"
            BorderThickness="0"
            ItemsSource="{Binding ToolList}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <Grid Background="Transparent">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="MouseLeftButtonDown">
                                <b:CallMethodAction MethodName="Grid_MouseLeftButtonDown" TargetObject="{Binding ElementName=win, Path=DataContext}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Image
                            Width="15"
                            Margin="3,0"
                            HorizontalAlignment="Left"
                            Source="{Binding Icon}" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{Binding Header}" />
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <Canvas
            Name="canvas"
            Grid.Row="1"
            Grid.Column="1"
            AllowDrop="True"
            Background="#EEE">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="Drop">
                    <b:CallMethodAction MethodName="Canvas_Drop" TargetObject="{Binding}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>

        </Canvas>
    </Grid>
</UserControl>
