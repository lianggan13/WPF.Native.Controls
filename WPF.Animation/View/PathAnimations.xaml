<Page
    x:Class="WPF.Animation.View.PathAnimations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Animation.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PathAnimations"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Page.Resources>
        <PathGeometry x:Key="pathData" Figures="M0,0 100,100 500,100 600,200" />
        <PathGeometry x:Key="animPath1" Figures="M 10,100 C 35,0 135,0 160,100 180,190 285,200 310,100" />
        <PathGeometry x:Key="animPath2" Figures="M 0,30 A 30,30 0 1 1 0,30.001  Z" />
        <!--<PathGeometry x:Key="animPath2" Figures="M 0,30 A 30,30 180 0 1 60,30  A30,30 180 0 1 0,30" />-->
        <!--<PathGeometry x:Key="animPath2" Figures="M 0,30 A 30,30 180 0 1 60,30  30,30 180 0 1 0,30" />-->
    </Page.Resources>
    <Grid Background="White">
        <UniformGrid>
            <Grid>
                <Path
                    x:Name="path"
                    Data="{StaticResource pathData}"
                    Stroke="Red"
                    StrokeThickness="1" />
                <Path Fill="Orange">
                    <Path.Data>
                        <EllipseGeometry
                            x:Name="eg"
                            Center="0,0"
                            RadiusX="30"
                            RadiusY="30" />
                    </Path.Data>
                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard
                                    AutoReverse="True"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetName="eg"
                                    Duration="0:0:3">
                                    <PointAnimationUsingPath PathGeometry="{Binding ElementName=path, Path=Data}" Storyboard.TargetProperty="Center" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>
            </Grid>

            <Grid>
                <Canvas
                    Width="340"
                    Height="240"
                    HorizontalAlignment="Left">
                    <Path
                        Margin="15,15,15,15"
                        VerticalAlignment="Top"
                        Data="{StaticResource animPath1}"
                        Stretch="None"
                        Stroke="Black"
                        StrokeThickness="2" />
                    <Path Margin="15,15,15,15" Fill="Blue">
                        <Path.Data>
                            <EllipseGeometry
                                x:Name="MyAnimatedEllipseGeometry"
                                Center="10,100"
                                RadiusX="15"
                                RadiusY="15" />
                        </Path.Data>
                    </Path>
                </Canvas>
                <Button HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    Start Animation
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard Name="MyBeginStoryboard">
                                <Storyboard>
                                    <PointAnimationUsingPath
                                        AutoReverse="True"
                                        PathGeometry="{StaticResource animPath1}"
                                        RepeatBehavior="Forever"
                                        Storyboard.TargetName="MyAnimatedEllipseGeometry"
                                        Storyboard.TargetProperty="Center"
                                        Duration="0:0:5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>

            </Grid>

            <Grid>
                <Canvas
                    Width="340"
                    Height="240"
                    HorizontalAlignment="Left">
                    <Path
                        Margin="15,15,15,15"
                        VerticalAlignment="Top"
                        Data="{StaticResource animPath1}"
                        Stretch="None"
                        Stroke="Black"
                        StrokeThickness="2" />
                    <Path Margin="0,0,15,15" Fill="Blue">
                        <Path.RenderTransform>
                            <TranslateTransform x:Name="MyAnimatedTransform" X="10" Y="100" />
                        </Path.RenderTransform>
                        <Path.Data>
                            <RectangleGeometry Rect="0,0,30,30" />
                        </Path.Data>
                    </Path>
                </Canvas>
                <Button HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    Start Animation
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--  Animates the rectangle horizotally along the path.  -->
                                    <DoubleAnimationUsingPath
                                        AutoReverse="True"
                                        PathGeometry="{StaticResource animPath1}"
                                        RepeatBehavior="Forever"
                                        Source="X"
                                        Storyboard.TargetName="MyAnimatedTransform"
                                        Storyboard.TargetProperty="X"
                                        Duration="0:0:5" />

                                    <!--  Animates the rectangle vertically along the path.  -->
                                    <DoubleAnimationUsingPath
                                        AutoReverse="True"
                                        PathGeometry="{StaticResource animPath1}"
                                        RepeatBehavior="Forever"
                                        Source="Y"
                                        Storyboard.TargetName="MyAnimatedTransform"
                                        Storyboard.TargetProperty="Y"
                                        Duration="0:0:5">
                                        <!--<DoubleAnimationUsingPath.PathGeometry>
                                                <PathGeometry Figures="M 10,100 C 35,0 135,0 160,100 180,190 285,200 310,100" />
                                            </DoubleAnimationUsingPath.PathGeometry>-->
                                    </DoubleAnimationUsingPath>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </Grid>

            <Grid>
                <Canvas
                    Width="340"
                    Height="240"
                    HorizontalAlignment="Left">
                    <Path
                        Margin="15,15,15,15"
                        VerticalAlignment="Top"
                        Data="{StaticResource animPath1}"
                        Stretch="None"
                        Stroke="Black"
                        StrokeThickness="2" />
                    <Path
                        x:Name="path3"
                        Margin="0,0,15,15"
                        Fill="Blue">
                        <Path.Data>
                            <RectangleGeometry x:Name="MyAnimatedRectGeometry" Rect="0,0 30 30">
                                <RectangleGeometry.Transform>
                                    <TransformGroup>
                                        <RotateTransform Angle="0" CenterX="15" CenterY="15" />
                                        <TranslateTransform x:Name="MyTranslateTransform" X="10" Y="100" />
                                    </TransformGroup>
                                </RectangleGeometry.Transform>
                            </RectangleGeometry>
                        </Path.Data>
                    </Path>
                </Canvas>
                <Button HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    Start Animation
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>

                                    <!--  Animates the angle along the path.  -->
                                    <DoubleAnimationUsingPath
                                        AutoReverse="True"
                                        PathGeometry="{StaticResource animPath1}"
                                        RepeatBehavior="Forever"
                                        Source="Angle"
                                        Storyboard.TargetName="path3"
                                        Storyboard.TargetProperty="(Path.Data).(RectangleGeometry.Transform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                                        Duration="0:0:5" />

                                    <!--  Animates the rectangle horizotally along the path.  -->
                                    <DoubleAnimationUsingPath
                                        AutoReverse="True"
                                        PathGeometry="{StaticResource animPath1}"
                                        RepeatBehavior="Forever"
                                        Source="X"
                                        Storyboard.TargetName="MyTranslateTransform"
                                        Storyboard.TargetProperty="X"
                                        Duration="0:0:5" />

                                    <!--  Animates the rectangle vertically along the path.  -->
                                    <DoubleAnimationUsingPath
                                        AutoReverse="True"
                                        PathGeometry="{StaticResource animPath1}"
                                        RepeatBehavior="Forever"
                                        Source="Y"
                                        Storyboard.TargetName="MyTranslateTransform"
                                        Storyboard.TargetProperty="Y"
                                        Duration="0:0:5" />

                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </Grid>

            <Grid>
                <Canvas>
                    <Path
                        Data="{StaticResource animPath2}"
                        Stroke="Blue"
                        StrokeThickness="2" />

                    <Path
                        Data="M0,0 H20 M15,-5 L20,0 L15,5"
                        Stroke="Black"
                        StrokeThickness="2">
                        <Path.RenderTransform>
                            <MatrixTransform />
                        </Path.RenderTransform>
                        <Path.Triggers>
                            <EventTrigger RoutedEvent="Line.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!--
                                        <DoubleAnimationUsingPath
                                            PathGeometry="{StaticResource animPath2}"
                                            RepeatBehavior="Forever"
                                            Source="X"
                                            Storyboard.TargetProperty="(Canvas.Left)"
                                            Duration="0:0:5" />

                                        <DoubleAnimationUsingPath
                                            PathGeometry="{StaticResource animPath2}"
                                            RepeatBehavior="Forever"
                                            Source="Y"
                                            Storyboard.TargetProperty="(Canvas.Top)"
                                            Duration="0:0:5" />
                                        -->

                                        <MatrixAnimationUsingPath
                                            DoesRotateWithTangent="True"
                                            PathGeometry="{StaticResource animPath2}"
                                            RepeatBehavior="Forever"
                                            Storyboard.TargetProperty="(Path.RenderTransform).(MatrixTransform.Matrix)"
                                            Duration="0:0:5" />

                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Path.Triggers>
                    </Path>
                </Canvas>

            </Grid>
        </UniformGrid>
    </Grid>
</Page>
