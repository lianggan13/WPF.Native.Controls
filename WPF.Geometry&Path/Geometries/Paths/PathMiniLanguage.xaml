<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Path
        Data="M 0 -50 L 210 -50 L 210 120 L 0 250 z"
        Fill="Aqua"
        Stroke="Magenta"
        StrokeThickness="3" />
    <!--  二次贝塞尔 一个控制点  -->
    <Path
        Fill="Transparent"
        Stroke="Tomato"
        StrokeThickness="2">
        <Path.Data>
            <GeometryGroup>
                <EllipseGeometry
                    Center="10,50"
                    RadiusX="5"
                    RadiusY="5" />
                <EllipseGeometry
                    Center="100,0"
                    RadiusX="5"
                    RadiusY="5" />
                <EllipseGeometry
                    Center="200,50"
                    RadiusX="5"
                    RadiusY="5" />
                <PathGeometry>
                    <PathFigure StartPoint="10,50">
                        <QuadraticBezierSegment Point1="100,0" Point2="200,50" />
                    </PathFigure>
                </PathGeometry>
            </GeometryGroup>
        </Path.Data>
    </Path>

    <!--  三次贝塞尔 两个控制点  -->
    <Path
        Fill="Transparent"
        Stroke="SteelBlue"
        StrokeThickness="3">
        <Path.Data>
            <GeometryGroup>
                <EllipseGeometry
                    Center="10,100"
                    RadiusX="5"
                    RadiusY="5" />
                <EllipseGeometry
                    Center="80,0"
                    RadiusX="5"
                    RadiusY="5" />
                <EllipseGeometry
                    Center="180,200"
                    RadiusX="5"
                    RadiusY="5" />
                <EllipseGeometry
                    Center="300,100"
                    RadiusX="5"
                    RadiusY="5" />
                <PathGeometry >
                    <PathFigure  StartPoint="10,100">
                        <BezierSegment
                            Point1="80,0"
                            Point2="180,200"
                            Point3="300,100" />
                    </PathFigure>
                </PathGeometry>
            </GeometryGroup>

        </Path.Data>
    </Path>
</Canvas>