      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Button HorizontalAlignment="Center" VerticalAlignment="Center"
            FontSize="24" Width="200" Height="100"
            Clip="M  0 50 A 100 50 0 0 0 200 50
