<Window
    x:Class="WPF.Window.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Window"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">
    <Grid>
        <StackPanel HorizontalAlignment="Left" ButtonBase.Click="Button_Click">
            <Button>BilibiliUserCenter</Button>
            <Button>MaxSignAutoChrome</Button>
            <Button>MenuAnimation</Button>
            <Button>WindowSkin</Button>
            <Button>CustomWindow</Button>
        </StackPanel>
    </Grid>
</Window>
