<Window
    x:Class="ColorFullSlider.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColorFullSlider"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:WPF.Slider.View"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid>
        <UniformGrid Columns="2" Rows="2">
            <view:EllipseThumbSlider />
            <view:TickSlider />
            <Slider
                IsSelectionRangeEnabled="True"
                Maximum="100"
                SelectionEnd="75"
                SelectionStart="25"
                TickFrequency="10"
                TickPlacement="Both"
                Value="10" />
        </UniformGrid>


    </Grid>
</Window>
