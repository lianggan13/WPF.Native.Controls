<Window
    x:Class="WPF.Chart.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Chart"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#f0f0f0"
    BorderBrush="#eeeeee"
    BorderThickness="1"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="25,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0">
                <Image>
                    <Image.Source>
                        <BitmapImage UriSource="/Images/livecharts.png" />
                    </Image.Source>
                </Image>
            </Border>
            <ScrollViewer
                Grid.Row="1"
                Margin="0,20"
                VerticalScrollBarVisibility="Auto">

                <ItemsControl ItemsSource="{Binding Samples}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="0,8"
                                Cursor="Hand"
                                MouseDown="Border_MouseDown">
                                <TextBlock
                                    FontFamily="Trebuchet MS"
                                    FontSize="15"
                                    FontWeight="Regular"
                                    Text="{Binding}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Grid>

        <Border Grid.Column="1" Background="White">
            <!--<Border Background="White" Margin="20 60 20 20" Padding="20" CornerRadius="8" MaxWidth="900" MaxHeight="600">-->
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.1"
                    ShadowDepth="0"
                    Color="#303030" />
            </Border.Effect>
            <ContentControl x:Name="content" />
            <!--</Border>-->
        </Border>

    </Grid>
</Window>
