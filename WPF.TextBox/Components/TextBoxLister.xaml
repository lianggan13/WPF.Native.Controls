<ContentControl
    x:Class="WPF.TextBox.Components.TextBoxLister"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.TextBox.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel>
        <TextBox x:Name="txtbox" DockPanel.Dock="Top" />

        <ContentControl Loaded="ListControl_Loaded" x:Name="lister" Focusable="False">
            <Border
                Background="{x:Static SystemColors.WindowBrush}"
                BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
                BorderThickness="1">
                <ScrollViewer
                    x:Name="scroll"
                    Padding="2,0,0,0"
                    Focusable="False">
                    <StackPanel x:Name="stack" />
                </ScrollViewer>
            </Border>
        </ContentControl>
    </DockPanel>

</ContentControl>
