<Window
    x:Class="WPF.Transform.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Transform"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WPF.Transform.Views"
    Title="MainWindow"
    Width="1385"
    Height="660"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="InteractiveTranslateTransform">
            <views:InteractiveTranslateTransform />
        </TabItem>
        <TabItem Header="InteractiveRotateTransform">
            <views:InteractiveRotateTransform />
        </TabItem>
        <TabItem Header="InteractiveScaleTransform">
            <views:InteractiveScaleTransform />
        </TabItem>
        <TabItem Header="InteractiveSkewTransform">
            <views:InteractiveSkewTransform />
        </TabItem>
        <TabItem Header="RotatedButtons">
            <views:RotatedButtons />
        </TabItem>
        <TabItem Header="TextDropShadow">
            <views:TextDropShadow />
        </TabItem>
    </TabControl>
</Window>
