<Page
    x:Class="WPF.ProgressBar.View.AnimationProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:WPF.ProgressBar.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:WPF.ProgressBar.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AnimationProgressBar"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <ProgressBar
            x:Name="progBar"
            Height="30"
            Maximum="100"
            Minimum="0"
            Value="30">
            <i:Interaction.Behaviors>
                <behavior:ProgressBarBehavior />
            </i:Interaction.Behaviors>
        </ProgressBar>

    </Grid>
</Page>
