<Page
    x:Class="WPF.ProgressBar.View.CornerProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:WPF.ProgressBar.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.ProgressBar.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CornerProgressBar"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#FF101833"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <components:RoundCornerProgressBar
                Grid.Row="2"
                Width="170"
                Maximum="100"
                Minimum="0"
                Value="30">
                <ProgressBar.Foreground>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Offset="0" Color="#FF22AC38" />
                        <GradientStop Offset="1" Color="#FF83FF97" />
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </components:RoundCornerProgressBar>
        </StackPanel>

    </Grid>
</Page>
