<ProgressBar
    x:Class="WPF.ProgressBar.Components.RoundCornerProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.ProgressBar.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="16"
    d:DesignWidth="170"
    mc:Ignorable="d">
    <ProgressBar.Resources>
        <Style TargetType="{x:Type local:RoundCornerProgressBar}">
            <Setter Property="Height" Value="16" />
            <Setter Property="Background" Value="#FF197ABD" />
            <Setter Property="Foreground" Value="#FF22AC38" />
            <Setter Property="BorderBrush" Value="#FFBCBCBC" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type local:RoundCornerProgressBar}">
                        <Grid>
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}" />
                            <Grid x:Name="PART_Track" ClipToBounds="True">
                                <Border
                                    x:Name="PART_Indicator"
                                    Width="0"
                                    HorizontalAlignment="Left"
                                    Background="{TemplateBinding Foreground}"
                                    CornerRadius="{TemplateBinding CornerRadius}" />
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ProgressBar.Resources>
</ProgressBar>
