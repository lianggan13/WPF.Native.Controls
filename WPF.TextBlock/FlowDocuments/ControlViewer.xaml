<Page
    x:Class="WPF.TextBlock.FlowDocuments.ControlViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.TextBlock.FlowDocuments"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ControlViewer"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <UniformGrid>
        <FlowDocumentScrollViewer x:Name="scViewer" />
        <FlowDocumentPageViewer x:Name="pgViewer" />
        <FlowDocumentReader x:Name="reader" />
    </UniformGrid>
</Page>
